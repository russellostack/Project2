<div class="container">
    <!-- HEADER -->
    <div class="row">
        <div class="col-md-12">
            <div id="buttons" class="main-content">
                <h1 class="d-inline display-3">Fit-or-Fat <span class="h1">weight loss tracker</span>
                </h1>
                <div class="main-buttons ">
                    <button type="button" id="sign-out-btn" class="btn btn-primary btn-lg">Sign out</button>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOD AND ACTIVITY INPUT -->
    <div class="row" id="user-input">
        <!-- food input -->
        <div id="food-input-div" class="col-md-7 main-content">
            <h4 class="text-center display-4">What did you eat today?</h4>
            <form id="food-input-form">
                <div class="form-group mt-3">
                    <label for="food-input">Enter types and amount of food you ate today</label>
                    <input type="text" class="form-control" id="food-input"
                        placeholder="for example 'chicken 200 grams'">
                    <div class="col text-center mt-3">
                        <button id="food-submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- food picture -->
        <div id="activity-input-div" class="col-md-5 main-content d-none d-md-block">
            <div class="box">
                <img src="/assets/images/food.jpeg" class="img-fluid img-thumbnail" alt="food">
            </div>
        </div>
    </div>

    <div class="row" id="user-input">
        <!-- activity picture -->
        <div id="activity-input-div" class="col-md-5 main-content d-none d-md-block">
            <div class="box">
                <img src="/assets/images/exercise.jpg" class="img-fluid img-thumbnail" alt="exercese">
            </div>
        </div>
        <!-- activity input -->
        <div id="activity-input-div" class="col-md-7 main-content">
            <h4 class="text-center display-4">Did any exercise today?</h4>
            <form id="activity-input-form">
                <div class="form-group mt-3">
                    <label for="activity-type-input">Enter type of activity you did today</label>
                    <input type="text" class="form-control" id="activity-type-input"
                        placeholder="type of activity, for example 'running'">
                    <div class="form-group mt-3">
                        <label for="activity-amt-input">Enter amount of activity you did today</label>
                        <input type="number" class="form-control" id="activity-amt-input" placeholder="">
                    </div>
                    <div class="col text-center">
                        <button id="activity-submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- WEIGHT INPUT -->
    <div class="row" id="user-input-weight">
        <div id="weight-form" class="col-md-7 main-content">
            <h4 class="text-center display-4">What is your current weight?</h4>
            <form id="weight-input-form">
                <div class="form-group">
                    <label for="weight-input">Enter your current weight</label>
                    <input type="number" class="form-control" id="weight-input" placeholder="kg">

                    <div class="col text-center mt-3">
                        <button id="weight-submit" class="btn btn-primary btn-lg">Show dashboard</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- scale picture -->
        <div id="activity-input-div" class="col-md-5 main-content d-none d-md-block">
            <div class="box">
                <img src="/assets/images/scale.png" class="img-fluid img-thumbnail" alt="scale">
            </div>
        </div>
    </div>
</div>

<!-- FOOTER -->
<footer id="main-footer" class="bg-dark fixed-bottom">
    <div class="container">
